
<%if flash[:errors] %>
<div class="errors" >

    <% flash[:errors].each do |error| %>
     <%= error %><br>
    <%end%>
    </div>
<%end%>

<div class= "inline" >
<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :password %>
    <%= f.password_field :password%><br>
    <%= f.submit %>
    <% end %>
    </div>

