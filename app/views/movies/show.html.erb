
<%if @movie.acceptance_status == 'accepted' || @current_user.is_admin %>
<h1><%=@movie.title%></h1>
<div class ="resp-container"> 
<iframe 
class='resp-iframe' 
    style= "background-size: 100%; background-repeat: no-repeat; background-image: url('https://i.pinimg.com/originals/20/ce/eb/20ceeb06601430b18bd11cb3244cb40f.jpg')" 
    src= <%=@movie.parse_url %> 
        frameborder="0" 
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" 
        allowfullscreen>
    </iframe> 
</div>
    <p>Submitted by <%=@movie.user.name%></p
    <p>Description: <%=@movie.description%></p>
    <%else%>
    <p><%= "Movie Status: #{@movie.acceptance_status}"%></p>
<%end%>


</p>
<%if @current_user.nil? || !@current_user.is_admin && @current_user != @movie.user%>

<%else %>
    <div><%= button_to "Edit", edit_movie_path, method: :get %></div>         
<%end%>
